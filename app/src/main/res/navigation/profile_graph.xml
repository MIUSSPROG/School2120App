<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_graph"
    app:startDestination="@id/profileFragment">

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.school2120app.presentation.profile.ProfileLoginFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile_login" >
        <action
            android:id="@+id/action_profileFragment_to_profileDocumentsFragment"
            app:destination="@id/profileDocumentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileDocumentsFragment"
        android:name="com.example.school2120app.presentation.profile.ProfileDocumentsFragment"
        android:label="fragment_profile_documents"
        tools:layout="@layout/fragment_profile_documents" >
        <argument
            android:name="profileDocs"
            app:argType="com.example.school2120app.domain.model.profile.ProfileDocs"
            app:nullable="true" />
        <action
            android:id="@+id/action_profileDocumentsFragment_to_documentSubscriptionDetailFragment"
            app:destination="@id/documentSubscriptionDetailFragment" />
        <action
            android:id="@+id/action_profileDocumentsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/documentSubscriptionDetailFragment"
        android:name="com.example.school2120app.presentation.profile.DocumentSubscriptionDetailFragment"
        android:label="fragment_document_subscription_detail"
        tools:layout="@layout/fragment_document_subscription_detail" >
        <argument
            android:name="userDocToSubscribe"
            app:argType="com.example.school2120app.domain.model.profile.UserDoc" />
        <action
            android:id="@+id/action_documentSubscriptionDetailFragment_to_dialogSubscriptionFragment"
            app:destination="@id/dialogSubscriptionFragment" />
        <action
            android:id="@+id/action_documentSubscriptionDetailFragment_to_profileDocumentsFragment"
            app:destination="@id/profileDocumentsFragment" />
    </fragment>
    <dialog
        android:id="@+id/dialogSubscriptionFragment"
        android:name="com.example.school2120app.presentation.profile.DialogSubscriptionFragment"
        android:label="fragment_dialog_subscribe_doc"
        tools:layout="@layout/fragment_dialog_subscribe_doc" >
        <argument
            android:name="userDoc"
            app:argType="com.example.school2120app.domain.model.profile.UserDoc" />
        <action
            android:id="@+id/action_dialogSubscriptionFragment_to_profileDocumentsFragment"
            app:destination="@id/profileDocumentsFragment" />
    </dialog>
</navigation>